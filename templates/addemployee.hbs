<!DOCTYPE html>
<div class="jumbotron container">
    <div class="col-xs-12">
        <h3 class="text-center">Adicionar funcionario</h3> {{!-- 15 de janeiro de 2018 - Dia --}}
    </div>
    <form method="post" onsubmit="return false">
        <div class="form-group col-xs-6">
            <label for="name">Nome: </label>
            <input type="text" name="name" class="form-control" id="nameSelect" autofocus />
        </div>
        <div class="form-group col-xs-6">
            <label for="role">Posição: </label>
            <select name="role" class="form-control" id="roleSelect">
                {{#each role}}
                <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group col-xs-12">
            <input type="submit" class="btn btn-primary center-block" value="Confirmar" onclick="router_client.submiter.post(event)">
        </div>
    </form>
</div>